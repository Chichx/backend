<div class="flex relative h-screen items-center justify-center flex-col">
    <div
        class="absolute top-96 right-0 w-48 h-48 blur-[180px] bg-gradient-to-r from-blue-300 to-blue-500 rounded-3xl z-[-1]">
    </div>
    <div
        class="absolute bottom-0 left-0 w-48 h-48 blur-[200px] bg-gradient-to-r from-blue-300 to-blue-500 rounded-3xl z-[-1]">
    </div>

    <div class="cursor-pointer p-3 rounded-full bg-red-900 absolute  top-3 left-3 md:top-10 md:left-10  hover:bg-red-950 transition-all duration-200"
        onclick="location.href='/auth/logout'">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-back-up text-gray-200"
            width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
            stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M9 14l-4 -4l4 -4"></path>
            <path d="M5 10h11a4 4 0 1 1 0 8h-1"></path>
        </svg>

    </div>
    <div class="w-full h-32 w-96 xl:w-1/3  ">
        <div
            class="w-full flex flex-col  border-b-[1px]  border-x-[1px] border-[#222227] py-3  rounded-t-2xl bg-[#131417] rounded-b-2xl  mt-[-10px]">
            <div class="flex">
                <div class="flex flex-col">
                    <h3 class="flex items-center text-xl font-medium text-white ml-4 mt-1.5">{{ userData.first_name}}
                        {{userData.last_name}}
                        <span class="ml-2 text-zinc-600 text-base flex items-center">Age: {{userData.age}}</span>
                    </h3>
                    <p class="text-sm text-zinc-500 font-medium ml-4" contenteditable="false">
                        Email: {{userData.email}}</p>
                </div>
            </div>
            <div class="  mx-6 md:mx-8 flex space-x-2 mt-4">
                <div
                    class="bg-zinc-900 flex items-center py-1.5 px-4 rounded-xl text-xs md:text-sm font-medium text-gray-200">
                    <div class="w-3 h-3 bg-[#d53939] rounded-full mr-2">
                    </div>
                    {{userData.role}}
                </div>

            </div>
        </div>
    </div>
</div>
</div>